<?xml version="1.0" encoding="UTF-8"?>
<project name="Create Runnable Jar for Almost Darkness">
    <mkdir dir="bin/"/>
    <mkdir dir="build/"/>
    
    <javac srcdir="src/" classpath="src/" destdir="bin/"></javac>

    <jar destfile="build/AlmostDarkness.jar">
        <manifest>
            <attribute name="Main-Class" value="qahweh.almostdarkness.AlmostDarkness"/>
            <attribute name="Class-Path" value="."/>
        </manifest>
        <fileset dir="bin"/>
    </jar>
</project>
